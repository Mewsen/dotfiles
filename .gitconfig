[user]
name=Michael Tews
email=michael@tews.dev
gpgsign=true
signingkey=0512FA62963CFD20
[commit]
gpgsign=true
verbose = true
[re.sonny.Commit]
title-length-hint=50
body-length-wrap=72
auto-capitalize-title=true
[column]
ui = auto
[branch]
sort = -committerdate
[tag]
sort = version:refname
[init]
defaultBranch = main
[diff]
algorithm = histogram
colorMoved = plain
mnemonicPrefix = true
renames = true
[push]
default = simple
autoSetupRemote = true
followTags = true
[fetch]
prune = true
pruneTags = true
all = true
[help]
autocorrect = prompt
[rerere]
enabled = true
autoupdate = true
[core]
excludesfile = ~/.gitignore
[rebase]
autoSquash = true
autoStash = true
updateRefs = true
[core]
fsmonitor = true
untrackedCache = true
[merge]
conflictstyle = zdiff3 
[pull]
rebase = true

[url "ssh://git@github.com/mewsen"]
insteadOf = https://github.com/mewsen

[url "ssh://git@github.com/tresorlabs"]
insteadOf = https://github.com/tresorlabs
